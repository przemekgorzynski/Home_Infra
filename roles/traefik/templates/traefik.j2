version: '3.8'

networks: 
  {{ tools.docker.network.name }}:
    external: true
    driver: bridge
    
volumes:
  traefik-ssl-certs:
    driver: local

services:
  traefik:
    image: {{ tools.traefik.docker_image }}:{{ tools.traefik.docker_image_tag }}@{{ tools.traefik.image_digest }}
    container_name: {{ tools.traefik.container_name }}
    networks:
      - {{ tools.docker.network.name }}
    ports:
      - "80:80"
      - "443:443"
      - "8080:8080"
    environment:
      DYNU_API_KEY: ${DYNU_API_KEY}
    restart: unless-stopped 
    volumes:
      - {{ tools.traefik.log_dir }}:{{ tools.traefik.log_dir }}
      - traefik-ssl-certs:/letsencrypt
      - /etc/traefik:/etc/traefik
      - /var/run/docker.sock:/var/run/docker.sock:ro
    healthcheck:
      test: wget -q http://ping.127.0.0.1/ping -O index_check.html || exit 1
      interval: 20s
      timeout: 10s
      retries: 3
      start_period: 10s
